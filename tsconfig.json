{
	"compilerOptions": {
		"types": ["cypress", "node"],
		"target": "es2016",
		"lib": ["es5", "dom"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"moduleResolution": "Node",
		"paths": {
			"@/components/*": ["components/*"],
			"@/pages/*": ["components/pages/*"],
			"@/common/*": ["components/common/*"],
			"@/utils/*": ["utils/*"],
			"@/contexts/*": ["contexts/*"],
			"@/hooks/*": ["hooks/*"],
			"@/scripts/*": ["scripts/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"postcss.config.js",
		"postcss.config.js",
		"next.config.js",
		"tailwind.config.js"
	],
	"exclude": ["node_modules", "cypress"]
}
